#include <iostream>
#include <algorithm>
using namespace std;

void solve(){
    int n,x;
    cin >> n >> x;
    int a[n];
    for(int i=0;i<n;i++){
        cin>>a[i];
    }
    sort(a,a+n);
    cout << a[n-x]-1 << endl;
}

int main(){
	int t;
    cin >> t;
    while(t--){
        solve();
    }
    return 0;
}
